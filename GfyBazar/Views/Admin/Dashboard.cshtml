@model GfyBazar.Models.Admin
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("Dashboard", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{

    <div class="row">
        <div class="col-md-6 col-lg-3 grid-margin stretch-card">
            <div class="card bg-gradient-primary text-white text-center card-shadow-primary">
                <div class="card-body bg-gradient">
                    <h6 class="font-weight-normal">Total Products</h6>
                    <h2 class="mb-0">@ViewBag.Products </h2>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 grid-margin stretch-card">
            <div class="card bg-gradient-danger text-white text-center card-shadow-danger">
                <div class="card-body bg-gradient">
                    <h6 class="font-weight-normal">Total Offers</h6>
                    <h2 class="mb-0">@ViewBag.Offers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 grid-margin stretch-card">
            <div class="card bg-gradient-warning text-white text-center card-shadow-warning">
                <div class="card-body bg-gradient">
                    <h6 class="font-weight-normal">Total Customers</h6>
                    <h2 class="mb-0">@ViewBag.Customers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 grid-margin stretch-card">
            <div class="card bg-gradient-info text-white text-center card-shadow-info">
                <div class="card-body bg-gradient">
                    <h6 class="font-weight-normal">Total Invoices</h6>
                    <h2 class="mb-0">@ViewBag.Invoices</h2>
                </div>
            </div>
        </div>
       
    </div>
  
    <div class="row grid-margin">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Offers</h4>

                    <div class="table-responsive mt-2">
                        <table class="table mt-3 border-top">
                            <thead>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>Offer Name</th>
                                    <th> Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.List != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.List)
                                        {
                                            <tr>
                                                <td>@i</td>

                                                <td>@Item.OfferName</td>
                                                <td>@Item.FromDate-@Item.ToDate</td>
                                                <td>@Item.OfferStatus</td>

                                            </tr>
                                            i++;
                                        }
                                    }
                                }


                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>


}





