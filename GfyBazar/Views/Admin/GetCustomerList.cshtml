@model GfyBazar.Models.Customer

@{
    ViewBag.Title = "GetCustomerList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("GetCustomerList", "Admin", FormMethod.Post, new { @id = "form1" }))
{
    <p style="color: red">
        @TempData["CustomerD"]
    </p>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Customer List</h4>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        Customer Name
                        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @Placeholder = " Customer Name" })
                    </div>

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        FromDate
                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "Enter From Date", @readonly = "readonle" })

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        ToDate
                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "Enter To Date", @readonly = "readonle" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                      Mobile No.
                        @Html.TextBoxFor(m => m.Contact, new { @class = "form-control", @Placeholder = "    Mobile No" })
                    </div>

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <br />
                        <input class="btn btn-success btn-md bg-gradient" type="submit" value="Search" id="btnSearch" name="Search" />
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="table-responsive">
                    <table id="example23" class="display nowrap table table-hover table-striped table-bordered dataTable no-footer">
                        <thead>
                            <tr>

                                <th>S No.</th>
                                <th>Mobile</th>
                                <th>Password</th>
                                <th>Customer Name </th>
                                <th>Email</th>
                                <th>Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstcustomer != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstcustomer)
                                    {
                                        <tr class="text-left">

                                            <td>@i</td>

                                            <td>@Item.Contact</td>

                                            <td>@Item.Password</td>
                                            <td>@Item.CustomerName</td>

                                            <td>@Item.Email</td>
                                            <td>

                                                <a href="/Admin/DeleteCustomer?id=@Item.CustomerID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this ?');">Delete</a>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        



    </div>
</div>
}
<script src="../../AdminCSS/js/jquery.min.js"></script>

<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });

    }); 

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        maxDate: 0,
        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
        minDate: new Date(new Date().setMonth(new Date().getMonth() - 2))
    });

</script>
