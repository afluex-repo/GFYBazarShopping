@model GfyBazar.Models.Customer

@if (Session["CustomerID"] == null)
{


    @*<li class="btn btn-primary btn-sm">
        <a data-toggle="modal" style="color:white;font-size:15px" data-target="#login-signup" href="#" title="Login / Sign up">Login</a>
    </li>*@

}
else
{
    if (ViewBag.ItemCount == null)
    {

    }
    else
    {
        <div class="dropdown dropdown-cart">
            <a href="#" class="dropdown-toggle lnk-cart" data-toggle="dropdown">
                <div class="items-cart-inner">
                    <div class="basket"> <i class="glyphicon glyphicon-shopping-cart"></i> </div>
                    <div class="basket-item-count"><span class="count">@ViewBag.ItemCount</span></div>
                    <div class="total-price-basket" style="width:134px;"> <span class="lbl">cart -</span> <span class="total-price"> <span class="sign">Rs</span><span class="value">@ViewBag.FinalAmount</span> </span> </div>
                </div>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <div class="cart-item product-summary">
                        @if (Model != null)
                    {
                        if (Model.lstProducts != null)
                        {
                            foreach (var item in Model.lstProducts)
                            {
                                    <div class="row">
                                        <div class="col-xs-4">
                                            <div class="image"> <a href="#"><img src="/@item.PrimaryImage" alt=""></a> </div>
                                        </div>
                                        <div class="col-xs-7">
                                            <h3 class="name"><a href="#">@item.ProductName</a></h3>
                                            <div class="price">(@item.ProductQuantity X @item.MRP)</div>
                                        </div>
                                        @*k <div class="col-xs-1 action"> <a href="#"><i class="fa fa-trash"></i></a> </div>*@
                                    </div>
                                }
                            }
                        }
                    </div>
                    <!-- /.cart-item -->
                    <div class="clearfix"></div>
                    <hr>
                    <div class="clearfix cart-total">
                        @if (Model.lstProducts != null)
                    {
                            <div class="pull-right"> <span class="text">Sub Total :</span><span class="price">@ViewBag.FinalAmount</span> </div>
                        }
                        <div class="clearfix"></div>
                        <a href="/Customer/Cart" class="btn btn-upper btn-primary btn-block m-t-20">Checkout</a>
                    </div>
                    <!-- /.cart-total-->

                </li>
            </ul>
            <!-- /.dropdown-menu-->
        </div>
    }

}