    <script src="../../ReceiptFolder/js/bootstrap.min.js"></script>

    <link href="../../ReceiptFolder/css/bootstrap.min.css" rel="stylesheet" />
    <link href="../../ReceiptFolder/css/style.css" rel="stylesheet" />
</body>



