
@{
    ViewBag.Title = "FeeStructure";
    Layout = "~/Views/Shared/SellerLandingPage.cshtml";
}

<style>
    .top-header2 {
    background-color: #5ca47a;
    padding: 12px 0px;
    color: #fff;
}

.lowest-cost {
    padding: 10px 0px;
}
 .market {
    padding: 20px 0px;
}
 .backgroundbg1 {
    background-color: #f1eaea;
    padding: 25px 60px;
}
    .backgroundbg1 P {
    font-size: 15px;
}
.icon11.text-center {
    background-color: #5ca47a;
    margin: 0 auto;
    width: 22%;
    border-radius: 50%;
    padding: 21px 0px;
    margin-bottom: 20px;
}
.icon11.text-center img {
    max-width: 70%;
    margin: 0 auto;
}
.backgroundbg1 h1 {
    padding-bottom: 10px;
}

</style>
<div class="top-header2">
    <h1 class="text-center">Fee Structure</h1>
</div>
<div class="lowest-cost">
    <div class="container">
        <div class="row">        
            <div class="col-md-12">   
                <h1 class="text-center">The lowest cost of doing business in the industry</h1>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="marketplace">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="market">
                    <h1 class="text-center">Gfy Bazar'S MARKETPLACE FEE STRUCTURE</h1>
                </div>
            </div>
        </div>
       <div class="backgroundbg1">
           <div class="row">
               <div class="col-md-3 col-lg-3">
                   <div class="icon11 text-center">
                       @*<img src="/img/commission-fee.png" class="img-responsive" alt="banner">*@
                       <img  src="~/assets/images/dhara shop.png" class="img-responsive" />
                   </div>
                   <h1 class="text-center">Commission fee</h1>
                   <p class="text-center">Percentage of Order item value ( depends on category & sub-category)</p>
               </div>
               <div class="col-md-3 col-lg-3">
                   <div class="icon11 text-center">
                       @*<img src="/img/shipping-fee.png" class="img-responsive" alt="banner">*@
                       <img src="~/assets/images/dhara shop.png" class="img-responsive" />
                   </div>
                   <h1 class="text-center">Bazar fee</h1>
                   <p class="text-center">Calculated on the basis of product weight and shipping location</p>
               </div>
               <div class="col-md-3 col-lg-3">
                   <div class="icon11 text-center">
                       @*<img src="/img/collection-fee.png" class="img-responsive" alt="banner">*@
                       <img src="~/assets/images/dhara shop.png" class="img-responsive" />
                   </div>
                   <h1 class="text-center">Collection fee</h1>
                   <p class="text-center">Payment gateway or cash collection charges for every sale</p>
               </div>
               <div class="col-md-3 col-lg-3">
                   <div class="icon11 text-center">
                       @*<img src="/img/fixed-fee.png" class="img-responsive" alt="banner">*@
                       <img src="~/assets/images/dhara shop.png" class="img-responsive" />
                   </div>
                   <h1 class="text-center">Fixed fee</h1>
                   <p class="text-center">A small fee that Gfy Bazar charges on all transactions</p>
               </div>
           </div>
           <div class="space1"></div><div class="space1"></div>
           <div class="row">
               <div class="col-md-4 col-lg-4">
                   <h1 class="text-center">Settlement Amount</h1>
                   <p class="text-center">credited to your bank account within 7-15 business days of dispatch</p>
               </div>
               <div class="col-md-4 col-lg-4">
                   <h1 class="text-center">Order Item Value</h1>
                   <p class="text-center">Selling price & Shipping charge paid by customer and excludes discount offered by Seller</p>
               </div>
               <div class="col-md-4 col-lg-4">
                   <h1 class="text-center">Marketplace Fee</h1>
                   <p class="text-center">Includes shipping fee, fixed fee and selling commission</p>
               </div>
           </div>
       </div>
    </div>
</div>
