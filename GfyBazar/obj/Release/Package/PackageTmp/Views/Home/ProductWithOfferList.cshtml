<style>
    .paginate {
        padding: 0;
        margin: 0;
    }

        .paginate > li {
            list-style: none;
            border: 1px solid #ddd;
            margin: 10px 0;
        }

    .paginate-pagination ul > li > a.page-next.deactive, .paginate-pagination ul > li > a.page-prev.deactive {
        opacity: 0.7;
        cursor: default;
        height: 35px;
    }

    .paginate-pagination ul > li > a.page.active {
        opacity: 0.7;
        cursor: default;
        height: 35px;
    }
</style>
